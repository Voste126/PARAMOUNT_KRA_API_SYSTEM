{
  "info": {
    "name": "KRA PIN Checker by ID Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GetToken",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {\r",
              "\r",
              "\r",
              "    pm.response.to.have.status(200);\r",
              "\r",
              "\r",
              "    var jsonData = pm.response.json();\r",
              "\r",
              "\r",
              "    pm.collectionVariables.set(\"access_token\",jsonData.access_token);\r",
              "\r",
              "\r",
              "});"
            ],
            "type": "text/javascript",
            "packages": {}
          }
        }
      ],
      "request": {
        "url": {
          "raw": "https://sbx.kra.go.ke/oauth/v1/generate?grant_type=client_credentials",
          "host": [
            "sbx",
            "kra",
            "go",
            "ke"
          ],
          "path": [
            "v1",
            "token",
            "generate"
          ],
          "query": [
            {
              "key": "grant_type",
              "value": "client_credentials"
            }
          ],
          "protocol": "https"
        },
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "username",
              "type": "string",
              "value": ""
            },
            {
              "key": "password",
              "type": "string",
              "value": ""
            }
          ]
        },
        "header": [],
        "method": "GET"
      },
      "response": []
    },
    {
      "name": "KRA PINChecker by ID",
      "request": {
        "url": {
          "raw": "https://sbx.kra.go.ke/checker/v1/pin",
          "host": [
            "sbx",
            "kra",
            "go",
            "ke"
          ],
          "path": [
            "checker",
            "v1",
            "pin"
          ],
          "protocol": "https"
        },
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "type": "string",
              "value": "{{access_token}}"
            }
          ]
        },
        "body": {
          "raw": "{\r\n    \"TaxpayerType\": \"KE\",\r\n    \"TaxpayerID\": \"1000000\"\r\n}",
          "mode": "raw",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "header": [],
        "method": "POST"
      }
    }
  ]
}